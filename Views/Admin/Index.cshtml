@using Part_2.Services;
@model AdminLoggedInModel

@{
    ViewData["TItle"] = "Porta";
}


<div class="container mt-5">
    <h1 class="text-center mb-4">Hello Admin</h1>
    <div class="user-details mb-4">
        <h2>User Details</h2>
        <div>
            <p>Welcome Admin: <strong>@Model.User.Username</strong></p>
        </div>
    </div>

    <div>
        <h3 class="mb-3">Admin Actions</h3>
        <ul class="list-group">
            <li class="list-group-item">
                <a asp-action="ViewAllClaims" asp-controller="Admin" class="btn btn-primary">View All Claims</a>
            </li>
            <li class="list-group-item">
                <a asp-action="ManageUsers" asp-controller="Admin" class="btn btn-primary">Manage Users</a>
            </li>
            <li class="list-group-item">
                <a asp-action="ViewAllContracts" asp-controller="Admin" class="btn btn-primary">View All Contracts</a>
            </li>
            <li class="list-group-item">
                <a asp-action="PaymentHistory" asp-controller="Admin" class="btn btn-primary">Payment History</a>
            </li>
            <li class="list-group-item">
                <a asp-action="LogOut" asp-controller="Admin" class="btn btn-danger">Log Out</a>
            </li>
            @if (RoleController.Role == "HR") {
                <li class="list-group-item">
                    <a asp-action="LogOut" asp-controller="Admin" class="btn btn-danger">Log Out</a>
                </li>
            }
        </ul>


    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .user-details {
        border: 1px solid #ced4da;
        border-radius: .25rem;
        padding: 15px;
        background-color: #ffffff;
    }

    .list-group-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .list-group-item a {
            width: 100%;
            text-align: center;
        }
</style>
